<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp"
    android:theme="@style/AppTheme" >

    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/lib-auto"
        android:id="@+id/textInputLayout_flatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat" >

        <EditText
            android:id="@+id/editText_flatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Flat Name"
            android:singleLine="true"
            android:textColorHint="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/lib-auto"
        android:id="@+id/textInputLayout_flatFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat" >

        <EditText
            android:id="@+id/editText_flatFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Flat Floor"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <Spinner
            android:id="@+id/spinner_flatType"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/flat_type"
            android:prompt="@string/spinner_prompt"
            android:spinnerMode="dialog" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="#00796B"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_addFlat"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#00796B"
            android:text="Add Flat"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewFake"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/icon_error"
        android:singleLine="true"
        android:visibility="invisible" />

</LinearLayout>