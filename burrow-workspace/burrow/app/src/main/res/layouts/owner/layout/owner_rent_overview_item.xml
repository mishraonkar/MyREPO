<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-3dp"
        android:background="@drawable/card_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_profile" />

            <TextView
                android:id="@+id/tenetName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-25dp"
                android:text="Ragu Ram"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_phone_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tenetFateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="35dp"
            android:paddingBottom="10dp"
            android:text="Flat No : 550"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="55dp"
            android:paddingBottom="10dp"
            android:text="Rent Status : Unpaid"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rentPaidDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="75dp"
            android:paddingBottom="10dp"
            android:text="Due : 25/06/15"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>