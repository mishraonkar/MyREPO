<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">#008200</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="AppThemeNew" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <!-- <item name="colorControlNormal">@color/toolbar_icon</item> -->
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <!-- Set proper title size -->
        <item name="android:textSize">20dp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- aml -->

    <style name="TextAppearence.Registration" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/registrationTextField</item>
        <item name="colorAccent">@color/registrationTextField</item>
        <item name="colorControlNormal">@color/registrationTextField</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="TextAppearence.OTP" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppThemeOwner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">#008200</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

</resources>